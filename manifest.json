{
  "manifest_version": 3,
  "name": "Brand Inspector",
  "version": "0.3.1",
  "description": "Витягує лого, ключові слова, опис, шрифти та кольори з поточної сторінки.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_title": "Brand Inspector", "default_popup": "popup.html" },
  "icons": { "128": "icon-128.png" }
}
